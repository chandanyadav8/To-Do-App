    <body>
<section class="container">
        <h1 align="center">TODO APP</h1>

            <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table1">
                <thead class="table-row">
                  <tr >
                    <th >Add Task</th>
                    <th >category</th>
                    <th >date</th>
                    <th ></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="What do you need to do?" required></input></th>
                      <td >  <select name="category" required style=" height: 30px; text-align: start;
                        padding: 1px 2px;
                      border-width: 2px;" >

                        <option>PERSONAL</option>
                        <option>WORK</option>
                        <option>SCHOOL</option>
                        <option>CLEANING</option>
                        <option>OTHER</option>

                    </select></th>
                      <td > <input type="date" name="date" required></th>
                      <td ><input type="submit"  class="btn"id="add" value="ADD TASK" style="color: #fff;
                        background-color: #28a745; height:50px"></th>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div>          
                <h1 align="center">TASKS LIST</h1>

                <form action="/delete-task" method="GET">
                    <table class="table2">
                        <thead class="table-row-2">
                            <tr>
                              <th>Select</th>
                              <th>Task</th>
                              <th>Category</th>
                            <th>due date</th>
                            </tr>
                          </thead>
                        <% for(let i of task) { %>
                            

<tr>

                               <td><input type="checkbox" name="<%= i._id %>" ></td>
                               <td> <p id="task-description"><%= i.description %></td>
                                <td><p id="task-category"></p>: <%= i.category %></td>
                                <td><p id="due-date">: <%= i.date %></p></td>
</tr>
                    

                        <% } %>
                            
                                      
</table>
<div  align = "center"><input type="submit" class="btn" value="DELETE TASK" style="color: #fff;
  background-color: yellow; height:50px">
                </div></form>

        
            </div>
